<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="fvInfoVm"
            type="jso.kpl.traveller.viewmodel.DetailCountryInfoViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top_action_bar"
            layout="@layout/top_action_bar"
            title="@{fvInfoVm.countryItem.ct_name}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:setBgImg="@{fvInfoVm.countryItem.ct_bg}">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/flag_iv"
                            setCircleImg="@{fvInfoVm.countryItem.ct_flag}"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="5dp"
                            android:paddingLeft="5dp"
                            android:text="@{fvInfoVm.countryItem.ct_name}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/flag_iv"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="@{fvInfoVm.isFavorite ? @drawable/clicked_star:@drawable/star}"
                            android:onClick="@{()->fvInfoVm.onFavoriteClicked()}"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/s_round_border_blue"
                        android:backgroundTint="#E6ffffff"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="위치"
                            android:textColor="@color/black"
                            android:textSize="@dimen/middle_text_size"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginBottom="5dp"
                            android:elevation="0dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <fragment
                                android:id="@+id/map"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/s_round_border_blue"
                        android:backgroundTint="#E6ffffff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="통화 단위"
                                android:textColor="@color/black"
                                android:textSize="@dimen/middle_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@{fvInfoVm.countryItem.ct_currency}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/middle_text_size"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/s_round_border_blue"
                        android:backgroundTint="#E6ffffff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="사용 언어"
                                android:textColor="@color/black"
                                android:textSize="@dimen/middle_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@{fvInfoVm.countryItem.ct_language}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/middle_text_size"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/s_round_border_blue"
                        android:backgroundTint="#E6ffffff"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="주 종교"
                                android:textColor="@color/black"
                                android:textSize="@dimen/middle_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@{fvInfoVm.countryItem.r_name}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/middle_text_size"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <ImageView
                            setFitCenterImg="@{fvInfoVm.countryItem.r_img}"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/catholic" />

                        <TextView
                            OnClickListener="@{fvInfoVm.onDetailExplainClickListener}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@{fvInfoVm.countryItem.r_explain}" />

                    </LinearLayout>

                    <LinearLayout
                        OnClickListener="@{fvInfoVm.onCountryWarningClickListener}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/s_round_border_blue"
                        android:backgroundTint="@color/clicked"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="국가 위험 수준 검색"
                            android:textColor="@color/white"
                            android:textSize="@dimen/subtitle_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/s_round_border_blue"
                        android:backgroundTint="#E6ffffff"
                        android:orientation="vertical"
                        android:visibility="@{fvInfoVm.isRelative ? View.VISIBLE:View.GONE}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="연관 포스트"
                            android:textColor="@color/black"
                            android:textSize="@dimen/middle_text_size"
                            android:textStyle="bold" />

                        <jso.kpl.traveller.ui.adapters.MeasuredViewPager
                            android:id="@+id/spVp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            app:setViewPagerAdapter="@{fvInfoVm.sideVpAdapter}" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </LinearLayout>
</layout>