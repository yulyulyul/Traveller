<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="FC"
            type="jso.kpl.traveller.model.FavoriteCountryVO" />

        <variable
            name="imageUrl"
            type="int" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/s_border">

            <ImageView
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:loadImage="@{imageUrl}" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/flag">

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{FC.country}"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/country_eng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/country"
                    android:text="@{FC.country_eng}"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/continent_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/country"
                    android:layout_alignLeft="@id/country"
                    android:text="@string/continent" />

                <TextView
                    android:id="@+id/continent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/continent_txt"
                    android:layout_toRightOf="@id/continent_txt"
                    android:text="@{FC.continent}" />

                <TextView
                    android:id="@+id/capital_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/continent_txt"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/continent"
                    android:text="@string/capital" />

                <TextView
                    android:id="@+id/capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/continent_txt"
                    android:layout_alignParentTop="false"
                    android:layout_toRightOf="@id/capital_txt"
                    android:text="@{FC.capital}" />

            </RelativeLayout>

            <Button
                android:id="@+id/country_info_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:background="@android:drawable/ic_menu_send" />

        </RelativeLayout>

    </LinearLayout>

</layout>