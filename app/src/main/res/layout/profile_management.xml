                        android:inputType="textPassword"
                        android:textColor="@color/clicked"
                        android:textSize="@dimen/middle_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pwd_txt" />

                    <TextView
                        android:id="@+id/pwd_check_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:text="새 비밀번호 확인"
                        android:textSize="@dimen/subtitle_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/input_new_pwd" />

                    <EditText
                        android:id="@+id/input_new_pwd_check"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
