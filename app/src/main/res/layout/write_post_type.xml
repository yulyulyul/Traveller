<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.WritePostType">

    <data>

        <import type="android.view.View" />

        <variable
            name="v"
            type="View" />

        <variable
            name="postTypeVm"
            type="jso.kpl.traveller.viewmodel.EditingPostViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:weightSum="10"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/i_left_space_arrow_icon"
                    app:OnClickListener="@{postTypeVm.onDetachFragmentClickListener}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Post"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/i_gray_save_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:onClick="@{postTypeVm.onSaveSpClickListener}" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusable="auto"
                        android:focusableInTouchMode="true"
                        android:hint="장소 입력"
                        android:nextFocusDown="@id/edit_expenses"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="@={postTypeVm.inputPlace}"
                        android:textSize="20dp"
                        app:setInitFocusing="@{true}" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80808080"
                android:layout_marginVertical="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <EditText
                        android:id="@+id/edit_expenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="여행 경비 입력"
                        android:background="@android:color/transparent"
                        android:text="@={postTypeVm.inputExpenses}"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:padding="5dp"
                        android:focusable="true"
                        android:singleLine="true"
                        android:nextFocusDown="@id/edit_comment" />

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:background="#80808080" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <EditText
                        android:id="@+id/edit_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="내용 입력"
                        android:background="@android:color/transparent"
                        android:text="@={postTypeVm.inputComment}"
                        android:textSize="20dp"
                        android:padding="5dp"
                        android:focusable="true"
                        android:singleLine="true"
                        android:nextFocusDown="@id/edit_comment" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:background="#80808080" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                android:visibility="@{postTypeVm.isCalendar?View.VISIBLE:View.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    app:OnClickListener="@{postTypeVm.onCalendarClickListener}">

                    <TextView
                        android:id="@+id/text_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:focusable="true"
                        android:hint="여행 총 기간"
                        android:nextFocusDown="@id/edit_comment"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="@{postTypeVm.travelPeriod[2]}"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="#80808080" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{postTypeVm.isTag?View.VISIBLE:View.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="카테고리"
                        android:textSize="20dp"
                        android:padding="5dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/i_plus_icon"
                        app:OnClickListener="@{postTypeVm.onAddCategoryClickListener}" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <LinearLayout
                        android:id="@+id/category_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                </HorizontalScrollView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:background="#80808080" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/writeImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                android:visibility="@{postTypeVm.isPhoto?View.VISIBLE:View.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="포토"
                            android:layout_weight="8"
                            android:padding="5dp"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/photo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/addPhoto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/i_circle_plus_icon"
                            android:layout_marginHorizontal="10dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/isPhoto"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="5dp"
                android:onClick="@{()->postTypeVm.onClick(isPhoto)}">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/i_photo_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/isCalendar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="5dp"
                android:onClick="@{()->postTypeVm.onClick(isCalendar)}">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/i_calendar_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calendar" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/isTag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="5dp"
                android:onClick="@{()->postTypeVm.onClick(isTag)}">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/i_category_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</layout>