<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.EditingPost">

    <data>

        <import type="android.view.View" />

        <import type="jso.kpl.traveller.R" />

        <variable
            name="editingPostVm"
            type="jso.kpl.traveller.viewmodel.EditingPostViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/timeline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/s_border_right"
                android:orientation="vertical"
                android:visibility="@{editingPostVm.isCartlist?View.VISIBLE:View.GONE}">

                <me.jerryhanks.timelineview.TimeLineView
                    android:id="@+id/timelineView"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    app:setTimelineAdapter="@{editingPostVm.timelineAdapter}">

                </me.jerryhanks.timelineview.TimeLineView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <!--상단바(뒤로가기 + 저장하기)-->

                <RelativeLayout
                    android:id="@+id/upper_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="@{editingPostVm.isCartlist ? View.GONE:View.VISIBLE}">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/i_left_arrow_icon"
                        app:OnClickListener="@{editingPostVm.onBackClickListener}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Traveller"
                        android:textColor="@color/clicked"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/post_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:clickable="false"
                        android:text="완료"
                        android:textColor="@color/non_clicked"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="@{editingPostVm.isSmallPost?View.VISIBLE:View.GONE}"
                        app:OnClickListener="@{editingPostVm.onSaveClickListener}" />

                </RelativeLayout>

                <!--카트리스트 상단바-->

                <RelativeLayout
                    android:id="@+id/catelist_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="@{editingPostVm.isCartlist ? View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@{editingPostVm.timelineSelect != 0 ? editingPostVm.timelineItem.get(editingPostVm.timelineSelect).sp_place : editingPostVm.timelineItem.get(0).sp_place}"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/toolbar_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:onClick="@{() -> editingPostVm.onCatelistCancelClicked()}"
                        android:text="닫기"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!--노드 파트-->

                <ScrollView
                    android:id="@+id/middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/upper_toolbar"
                    android:layout_weight="9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <!--카트리스트 컨텐츠-->

                        <RelativeLayout
                            android:id="@+id/cartlist_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@color/colorWhite"
                            android:minHeight="100dp"
                            android:orientation="vertical"
                            android:visibility="@{editingPostVm.isCartlist ? View.VISIBLE:View.GONE}">

                            <TextView
                                android:id="@+id/cartlist_cost_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@id/cartlist_period_txt"
                                android:layout_alignLeft="@id/cartlist_period_txt"
                                android:text="비용 : " />

                            <TextView
                                android:id="@+id/cartlist_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/cartlist_cost_txt"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@id/cartlist_cost_txt"
                                android:text="@{editingPostVm.timelineSelect != 0 ? editingPostVm.timelineItem.get(editingPostVm.timelineSelect).sp_expenses : editingPostVm.timelineItem.get(0).sp_expenses}" />

                            <TextView
                                android:id="@+id/cartlist_period_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="false"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:text="여행 날짜 : " />

                            <TextView
                                android:id="@+id/cartlist_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/cartlist_period_txt"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@id/cartlist_period_txt"
                                android:text="@{editingPostVm.timelineSelect != 0 ? editingPostVm.timelineItem.get(editingPostVm.timelineSelect).sp_period : editingPostVm.timelineItem.get(0).sp_period}" />

                            <TextView
                                android:id="@+id/cartlist_category_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cartlist_period_txt"
                                android:layout_alignLeft="@id/cartlist_cost_txt"
                                android:text="카테고리 : " />

                            <TextView
                                android:id="@+id/cartlist_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/cartlist_category_txt"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@id/cartlist_category_txt"
                                android:text="@{editingPostVm.timelineSelect != 0 ? editingPostVm.timelineItem.get(editingPostVm.timelineSelect).sp_category : editingPostVm.timelineItem.get(0).sp_category}" />

                            <ImageView
                                android:id="@+id/cartlist_img"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                app:setFitCenterImg="@{editingPostVm.timelineSelect != 0 ? editingPostVm.timelineItem.get(editingPostVm.timelineSelect).sp_imgs : editingPostVm.timelineItem.get(0).sp_imgs}" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/routeNodeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@color/simple_white"
                            android:gravity="center"
                            android:minHeight="100dp"
                            android:onClick="@{()->editingPostVm.onAddSmallPostClicked()}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/i_circle_plus_icon"
                                android:visibility="@{editingPostVm.isClick?View.VISIBLE:View.GONE}" />

                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            app:setFragmentManger="@{editingPostVm.fm}"
                            app:setInitFragment="@{editingPostVm.fragment}">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="여행 일정"
                                            android:textColor="#808080"
                                            android:textSize="20dp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="5dp"
                                        android:orientation="vertical"
                                        android:paddingHorizontal="20dp"
                                        android:paddingVertical="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="국가"
                                            android:textColor="@color/clicked"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="10dp"
                                            android:background="@android:color/transparent"
                                            android:focusable="true"
                                            android:hint="여행 국가를 입력해주세요."
                                            android:maxLength="85"
                                            android:nextFocusDown="@id/edit_expenses"
                                            android:padding="5dp"
                                            android:singleLine="true"
                                            android:text="@={editingPostVm.inputPlace}"
                                            android:textSize="20dp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginVertical="5dp"
                                        android:background="#80808080" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingHorizontal="20dp"
                                        android:paddingVertical="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="경비"
                                            android:textColor="@color/black"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <EditText
                                            android:id="@+id/edit_expenses"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="10dp"
                                            android:background="@android:color/transparent"
                                            android:focusable="false"
                                            android:hint="총 경비 합산"
                                            android:inputType="number"
                                            android:maxLength="15"
                                            android:nextFocusDown="@id/edit_comment"
                                            android:padding="5dp"
                                            android:singleLine="true"
                                            android:text="@={editingPostVm.inputExpenses}"
                                            android:textSize="20dp"
                                            app:onChangeMoney="@{null}" />


                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginVertical="5dp"
                                        android:background="#80808080" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingHorizontal="20dp"
                                        android:paddingVertical="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="기간"
                                            android:textColor="@color/black"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="10dp"
                                            android:orientation="vertical"
                                            app:OnClickListener="@{editingPostVm.onCalendarClickListener}">

                                            <TextView
                                                android:id="@+id/text_calendar"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@android:color/transparent"
                                                android:focusable="true"
                                                android:hint="여행 기간을 설정해주세요."
                                                android:nextFocusDown="@id/edit_comment"
                                                android:padding="5dp"
                                                android:singleLine="true"
                                                android:text="@={editingPostVm.travelResult}"
                                                android:textSize="20dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginVertical="5dp"
                                        android:background="#80808080" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingHorizontal="20dp"
                                        android:paddingVertical="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:text="내용"
                                            android:textColor="@color/black"
                                            android:textSize="16dp"
                                            android:textStyle="bold" />

                                        <EditText
                                            android:id="@+id/edit_comment"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="10dp"
                                            android:background="@android:color/transparent"
                                            android:focusable="true"
                                            android:hint="내용을 입력해주세요. (200자 제한)"
                                            android:maxLength="200"
                                            android:padding="5dp"
                                            android:text="@={editingPostVm.inputComment}"
                                            android:textSize="20dp"
                                            app:setDontEnter="@{null}" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginVertical="5dp"
                                        android:background="#80808080" />

                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </ScrollView>

                <!--작성 파트-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="@{editingPostVm.isSmallPost?View.VISIBLE:View.GONE}">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:onClick="@{()->editingPostVm.onOpenClicked()}"
                        android:paddingVertical="5dp"
                        android:paddingLeft="5dp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/str_is_open"
                            android:adjustViewBounds="true"
                            android:background="@{editingPostVm.isOpen ? @drawable/i_click_circle_icon:@drawable/i_non_click_circle_icon}"
                            android:backgroundTint="@{editingPostVm.isOpen? @color/clicked:@color/non_clicked}"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/str_is_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:ems="3"
                            android:text="@{editingPostVm.isOpen? @string/open:@string/close}"
                            android:textColor="@{editingPostVm.isOpen? @color/clicked:@color/non_clicked}" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">
            <!--app:layout_width="@{editingPostVm.isCartlist ? 0 : -2}">-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 나중에 스몰포스트 > 카트리스트 전환 버튼
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/i_back_btn"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:onClick="@{()->editingPostVm.onCartlistBackClick()}"
                    android:visibility="@{editingPostVm.isCartlist ? View.VISIBLE:View.GONE}" />-->

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="추가한 카트리스트가 없습니다."
                    android:visibility="@{editingPostVm.noCartlist ? View.VISIBLE:View.GONE}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textView"
                    app:setLinearRvAdapter="@{editingPostVm.cartlistItemAdapter}" /> <!--android:visibility="@{editingPostVm.isCartlist ? View.GONE:View.VISIBLE}"-->
            </RelativeLayout>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>