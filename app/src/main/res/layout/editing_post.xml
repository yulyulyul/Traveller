<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.EditingPost">

    <data>

        <import type="android.view.View" />
        <import type="jso.kpl.traveller.R" />

        <variable
            name="editingPostVm"
            type="jso.kpl.traveller.viewmodel.EditingPostViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <!--상단바(뒤로가기 + 저장하기)-->
        <RelativeLayout
            android:id="@+id/upper_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:OnClickListener="@{editingPostVm.onBackClickListener}"
                android:background="@drawable/i_left_arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Traveller"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/clicked" />

            <TextView
                android:id="@+id/post_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="완료"
                android:clickable="false"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/non_clicked"
                app:OnClickListener="@{editingPostVm.onSaveClickListener}"
                android:visibility="@{editingPostVm.isSmallPost?View.VISIBLE:View.GONE}"/>

        </RelativeLayout>

        //노드 파트
        <ScrollView
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper_toolbar"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/routeNodeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@color/simple_white"
                    android:gravity="center"
                    android:minHeight="100dp"
                    android:onClick="@{()->editingPostVm.onAddSmallPostClicked()}"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/i_circle_plus_icon"
                        android:visibility="@{editingPostVm.isClick?View.VISIBLE:View.GONE}" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:setFragmentManger="@{editingPostVm.fm}"
                    app:setInitFragment="@{editingPostVm.fragment}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="여행 일정"
                                    android:textColor="#808080"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="vertical"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="국가"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/clicked" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@android:color/transparent"
                                    android:focusable="true"
                                    android:hint="여행 국가를 입력해주세요."
                                    android:maxLength="85"
                                    android:nextFocusDown="@id/edit_expenses"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text="@={editingPostVm.inputPlace}"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="5dp"
                                android:background="#80808080" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="경비"
                                    android:textSize="16dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>

                                <EditText
                                    android:id="@+id/edit_expenses"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@android:color/transparent"
                                    android:focusable="false"
                                    android:hint="총 경비 합산"
                                    android:inputType="number"
                                    android:maxLength="15"
                                    android:nextFocusDown="@id/edit_comment"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text="@={editingPostVm.inputExpenses}"
                                    android:textSize="20dp"
                                    app:onChangeMoney="@{null}" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="5dp"
                                android:background="#80808080" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="기간"
                                    android:textSize="16dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:orientation="vertical"
                                    app:OnClickListener="@{editingPostVm.onCalendarClickListener}">

                                    <TextView
                                        android:id="@+id/text_calendar"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:focusable="true"
                                        android:hint="여행 기간을 설정해주세요."
                                        android:nextFocusDown="@id/edit_comment"
                                        android:padding="5dp"
                                        android:singleLine="true"
                                        android:text="@={editingPostVm.travelResult}"
                                        android:textSize="20dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="5dp"
                                android:background="#80808080" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="내용"
                                    android:textSize="16dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>

                                <EditText
                                    android:id="@+id/edit_comment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@android:color/transparent"
                                    android:focusable="true"
                                    android:hint="내용을 입력해주세요. (200자 제한)"
                                    android:maxLength="200"
                                    android:padding="5dp"
                                    android:text="@={editingPostVm.inputComment}"
                                    android:textSize="20dp"
                                    app:setDontEnter="@{null}" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="5dp"
                                android:background="#80808080" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>
            //작성 파트

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:visibility="@{editingPostVm.isSmallPost?View.VISIBLE:View.GONE}"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()->editingPostVm.onOpenClicked()}"
                android:layout_gravity="center"
                android:padding="5dp"
                android:weightSum="10">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/str_is_open"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@{editingPostVm.isOpen? @color/clicked:@color/non_clicked}"
                    android:background="@{editingPostVm.isOpen ? @drawable/i_click_circle_icon:@drawable/i_non_click_circle_icon}" />

                <TextView
                    android:id="@+id/str_is_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="@{editingPostVm.isOpen? @string/open:@string/close}"
                    android:textColor="@{editingPostVm.isOpen? @color/clicked:@color/non_clicked}"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</layout>