<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.EditingPost">

    <data>
        <import type="android.view.View"/>
        <variable
            name="editingPostVm"
            type="jso.kpl.traveller.viewmodel.EditingPostViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <!--상단바(뒤로가기 + 저장하기)-->
        <RelativeLayout
            android:id="@+id/upper_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:OnClickListener="@{editingPostVm.onBackClickListener}"
                android:background="@drawable/i_left_arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Traveller"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/post_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="SAVE"
                android:clickable="false"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#80808080"
                app:OnClickListener="@{editingPostVm.onSaveClickListener}"/>

        </RelativeLayout>

        //노드 파트

        <ScrollView
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper_toolbar"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/routeNodeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="#f2f2f2"
                    android:minHeight="100dp"
                    android:orientation="vertical"
                    android:onClick="@{()->editingPostVm.onAddSmallPostClicked()}">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="@{editingPostVm.isClick?View.VISIBLE:View.GONE}">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/i_clicker_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="새로운 일정을 만드세요."
                            android:textSize="30dp"/>

                    </LinearLayout>


                </LinearLayout>

                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    app:setFragmentManger="@{editingPostVm.fm}"
                    app:setInitFragment="@{editingPostVm.fragment}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="Main Post"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:focusable="true"
                                    android:hint="국가 입력"
                                    android:text="@={editingPostVm.inputPlace}"
                                    android:nextFocusDown="@id/edit_expenses"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:textSize="20dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="#80808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp">

                                <EditText
                                    android:id="@+id/edit_expenses"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:focusable="true"
                                    android:hint="여행 총 경비"
                                    android:text="@={editingPostVm.inputExpenses}"
                                    android:inputType="number"
                                    android:nextFocusDown="@id/edit_comment"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:textSize="20dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="#80808080" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                app:OnClickListener="@{editingPostVm.onCalendarClickListener}" >

                                <TextView
                                    android:id="@+id/text_calendar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:focusable="true"
                                    android:hint="여행 총 기간"
                                    android:nextFocusDown="@id/edit_comment"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:text="@{editingPostVm.travelPeriod[2]}"
                                    android:textSize="20dp"
                                    />

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="#80808080" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/writeContext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp">

                                <EditText
                                    android:id="@+id/edit_comment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:focusable="true"
                                    android:hint="내용 기입..."
                                    android:maxLines="10"
                                    android:padding="5dp"
                                    android:text="@={editingPostVm.inputComment}"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="5dp"
                                android:background="#80808080" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>
            //작성 파트

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:background="#f2f2f2">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:checked="@{editingPostVm.isOpen}"
                android:clickable="true"
                android:onClick="@{()->editingPostVm.onOpenClicked()}"
                android:text="공개" />

        </RelativeLayout>

    </LinearLayout>

</layout>