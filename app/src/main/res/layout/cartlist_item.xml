<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cartlist"
            type="jso.kpl.traveller.model.Cartlist" />

        <variable
            name="imgs"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/s_border">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{cartlist.p_place}"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cost_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/place"
                    android:layout_alignLeft="@id/place"
                    android:layout_marginBottom="5dp"
                    android:text="비용 : " />

                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/cost_txt"
                    android:layout_toRightOf="@id/cost_txt"
                    android:text="@{cartlist.p_expenses}" />

                <TextView
                    android:id="@+id/period_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cost_txt"
                    android:layout_alignLeft="@id/cost_txt"
                    android:layout_marginBottom="5dp"
                    android:text="여행 날짜 : " />

                <TextView
                    android:id="@+id/period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/period_txt"
                    android:layout_toRightOf="@id/period_txt"
                    android:text="@{cartlist.p_period}" />

                <TextView
                    android:id="@+id/category_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/period_txt"
                    android:layout_alignLeft="@id/cost_txt"
                    android:layout_marginBottom="5dp"
                    android:text="카테고리 : " />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/category_txt"
                    android:layout_toRightOf="@id/category_txt"
                    android:text="@{cartlist.p_category}" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    app:setFitCenterImg="@{imgs}" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>