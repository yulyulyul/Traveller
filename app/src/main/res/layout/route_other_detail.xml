<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="VM"
            type="jso.kpl.traveller.viewmodel.RouteOtherDetail_VM" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s_border"
                    android:backgroundTint="#45A1F5"
                    android:backgroundTintMode="multiply">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:drawableLeft="@drawable/i_airplane"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/ROD_title"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/my_post_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/i_home_btn"
                        android:onClick="@{()->VM.my_post_btnClickEvent()}" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/route_rel"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@id/header"
                    android:background="@drawable/s_border"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/Route_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="@string/route"
                        android:textColor="@color/browser_actions_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/route_rel"
                    android:background="@drawable/s_border"
                    android:descendantFocusability="blocksDescendants"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/category_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="@string/category"
                        android:textColor="@color/browser_actions_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/category_txt"
                        android:layout_centerInParent="true"
                        app:layoutManager="@{VM.layoutManager.getValue()}"
                        app:setGridRvAdapter="@{VM.adapter}" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/period_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/category_rel"
                    android:background="@drawable/s_border"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/period_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="@string/period"
                        android:textColor="@color/browser_actions_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/period_txt"
                        android:layout_centerHorizontal="true"
                        android:text="2019년 10월 11일 ~ 2019년 10월 18일"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cost_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/period_rel"
                    android:background="@drawable/s_border"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/cost_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="@string/cost"
                        android:textColor="@color/browser_actions_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cost_txt"
                        android:layout_centerHorizontal="true"
                        android:text="100,000 $"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/comments_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cost_rel"
                    android:background="@drawable/s_border"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp">

                    <Button
                        android:id="@+id/like_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:background="@{VM.like ? @drawable/i_liked_btn : @drawable/i_like_btn}"
                        android:onClick="@{()->VM.like_btnClickEvent()}" />

                    <Button
                        android:id="@+id/comments_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/like_btn"
                        android:background="@drawable/i_comments_btn" />

                    <TextView
                        android:id="@+id/userId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/like_btn"
                        android:layout_alignStart="@id/like_btn"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="UserId"
                        android:textColor="@color/browser_actions_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/userId"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/userId"
                        android:text="user_comments"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userId"
                        android:layout_alignStart="@id/like_btn"
                        android:text="@string/comments_count"
                        android:textSize="15sp" />
                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#45A1F5"
            android:backgroundTint="#45A1F5"
            android:backgroundTintMode="src_over"
            android:elevation="30dp"
            android:src="@drawable/i_plus_btn"
            android:onClick="@{()->VM.post_add_btnClickEvent()}"
            app:backgroundTint="#45A1F5" />
    </FrameLayout>
</layout>