<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="rodVm"
            type="jso.kpl.traveller.viewmodel.RouteOtherDetailViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/clicked">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/i_airplane"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="Traveller"
                            android:textColor="@color/colorWhite"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:layout_margin="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/route_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:background="@color/simple_white"
                        android:minHeight="100dp"
                        android:orientation="vertical"
                        android:layout_below="@+id/header" />

                    <LinearLayout
                        android:id="@+id/body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_below="@+id/route_rel">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="여행 국가"
                                android:textColor="@color/clicked"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:singleLine="true"
                                android:text="@{rodVm.postItem.p_place}"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:visibility="@{rodVm.postItem.p_start_date == null ? View.GONE : View.VISIBLE}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="여행 기간"
                                android:textColor="@color/clicked"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:text="@{rodVm.period}"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:visibility="@{rodVm.postItem.p_start_date == null ? View.GONE : View.VISIBLE}"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="여행 총 경비"
                                    android:textColor="@color/clicked"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:background="@android:color/transparent"
                                    android:padding="5dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="더보기"
                                    android:textSize="15dp"
                                    android:visibility="gone"/>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:text="@{rodVm.postItem.p_expenses}"
                                android:background="@android:color/transparent" />

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/category_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:visibility="@{rodVm.postItem.p_category.size() > 0  ? View.VISIBLE:View.GONE}">

                            <TextView
                                android:id="@+id/category_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="여행 카테고리"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/clicked"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/category_txt"
                                android:layout_centerInParent="true"
                                app:setLinearHorRvAdapter="@{rodVm.adapter}" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="20dp"
                                android:text="여행 사진들"
                                android:textColor="@color/clicked"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/vp"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                app:setViewPagerAdapter="@{rodVm.imageSideVpAdapter}"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/non_clicked"
                        android:layout_margin="10dp" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/comments_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp">

                    <Button
                        android:id="@+id/like_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:background="@{rodVm.isLike ? @drawable/i_like_icon : @drawable/i_none_like_icon}"
                        android:onClick="@{()->rodVm.onLikeClicked()}" />

                    <Button
                        android:id="@+id/comments_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/like_btn"
                        android:background="@drawable/i_comments_btn" />

                    <TextView
                        android:id="@+id/userId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/like_btn"
                        android:layout_alignStart="@id/like_btn"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="@{rodVm.postItem.p_author}"
                        android:textColor="@color/browser_actions_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/userId"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/userId"
                        android:text="@{rodVm.postItem.p_comment}"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userId"
                        android:layout_alignStart="@id/like_btn"
                        android:text=""
                        android:textSize="15sp" />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="#45A1F5"
            android:backgroundTint="#45A1F5"
            android:backgroundTintMode="src_over"
            android:elevation="30dp"
            android:src="@drawable/i_plus_btn"
            android:onClick="@{()->rodVm.post_add_btnClickEvent()}"
            app:backgroundTint="#45A1F5" />
    </FrameLayout>
</layout>